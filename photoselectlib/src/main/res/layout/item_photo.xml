<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:src="@color/background_color" />
    <ImageView
        android:id="@+id/iv_check"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:paddingTop="@dimen/basic_activity_margin2"
        android:paddingRight="@dimen/basic_activity_margin2"
        android:paddingLeft="@dimen/basic_activity_margin"
        android:paddingBottom="@dimen/basic_activity_margin"
        android:src="@mipmap/select_not"
        android:visibility="gone"
        android:layout_alignParentRight="true" />
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="0:00"
        android:visibility="gone"
        android:textColor="@color/white"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/basic_activity_margin2"/>
    <ImageView
        android:id="@+id/iv_not_click"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/round_white"
        android:layout_margin="2dp"
        android:clickable="true"
        android:visibility="gone"/>

</RelativeLayout>